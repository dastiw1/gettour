{
  "name": "gettour",
  "version": "0.0.5",
  "description": "Getchat.me onboarding tour library that works with their autochats",
  "scripts": {
    "clean": "rimraf lib && rimraf dist",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "mocha --require babel-core/register --require babel-polyfill --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node examples/",
    "cover": "nyc --check-coverage npm run test:only",
    "scss": "node-sass -o dist/css src/scss/styles.scss",
    "cssmin": "cleancss -o dist/css/styles.min.css dist/css/styles.css",
    "build:css": "npm run scss && npm run cssmin",
    "lint": "eslint src test",
    "build-scripts": "cross-env BABEL_ENV=production babel src --out-dir lib",  
    "concat:js": "node build/concat-scripts.js",
    "uglify": "uglifyjs -o dist/gettour.min.js dist/gettour.js",
    "build:js": "npm run build-scripts && npm run concat:js && npm run uglify",
    "build": "npm run build:css && npm run build:js",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "dist"
  ],
  "keywords": [
    "onboarding",
    "tour",
    "tutorial",
    "getchat"
  ],
  "dependencies": {
    "concat": "^1.0.3",
    "node-sass": "^4.12.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.6.0"
  },
  "author": "Dastan Mukazhan <seer.dastan@gmail.com>",
  "license": "ISC"
}
